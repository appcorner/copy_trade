<.header>
  My Trading Accounts
  <:actions>
    <.link patch={~p"/accounts/new"}>
      <.button>New Account</.button>
    </.link>
  </:actions>
</.header>

<div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
  <%= for account <- @accounts do %>
    <div class="relative flex flex-col bg-white p-6 shadow-lg rounded-xl dark:bg-zinc-800 border dark:border-zinc-700">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">
          <%= account.name %>
        </h3>
        <span class={"px-2 py-1 text-xs font-semibold rounded-full " <> 
          if(account.role == "master", do: "bg-blue-100 text-blue-800", else: "bg-green-100 text-green-800")}>
          <%= String.upcase(account.role) %>
        </span>
      </div>

      <div class="text-sm text-gray-500 dark:text-gray-400 space-y-2 mb-6">
        <div class="flex justify-between">
          <span>Mode:</span>
          <span class="font-medium text-gray-700 dark:text-gray-300"><%= account.copy_mode %></span>
        </div>
        <div class="flex justify-between">
          <span>Active:</span>
          <span class={if account.is_active, do: "text-green-600", else: "text-red-600"}>
            <%= if account.is_active, do: "Yes", else: "No" %>
          </span>
        </div>
      </div>

      <div class="mt-auto flex gap-2">
        <.link href={~p"/dashboard/#{account.id}"} class="flex-1">
          <button class="w-full py-2 px-4 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg shadow-md transition duration-200">
            Open Dashboard
          </button>
        </.link>
        
        <button phx-click="delete" phx-value-id={account.id} data-confirm="Are you sure?" class="bg-red-50 text-red-600 p-2 rounded-lg hover:bg-red-100 transition">
          <.icon name="hero-trash" class="w-5 h-5" />
        </button>
      </div>
    </div>
  <% end %>
</div>

