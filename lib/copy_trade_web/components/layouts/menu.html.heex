<nav class="bg-white border-b border-gray-200 sticky top-0 z-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 justify-between">
        
        <div class="flex">
        <div class="flex flex-shrink-0 items-center">
            <a href="/" class="flex items-center gap-2">
            <span class="text-2xl font-bold text-indigo-600 tracking-tighter hover:text-indigo-500">
                ‚ö° CopyTrade<span class="text-gray-900">Pro</span>
            </span>
            </a>
        </div>

        <% 
            # ‡∏î‡∏∂‡∏á Path ‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô‡∏°‡∏≤‡πÄ‡∏Å‡πá‡∏ö‡πÑ‡∏ß‡πâ‡πÄ‡∏ä‡πá‡∏Ñ (‡∏ñ‡πâ‡∏≤‡πÑ‡∏°‡πà‡∏°‡∏µ‡πÉ‡∏´‡πâ‡πÄ‡∏õ‡πá‡∏ô‡∏Ñ‡πà‡∏≤‡∏ß‡πà‡∏≤‡∏á)
            current_path = assigns[:current_path] || "" 
            
            # ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ä‡πà‡∏ß‡∏¢‡πÄ‡∏•‡∏∑‡∏≠‡∏Å Class: ‡∏ñ‡πâ‡∏≤‡∏ï‡∏£‡∏á‡∏Å‡∏±‡∏ö Path ‡πÉ‡∏´‡πâ‡∏™‡∏µ Indigo (Active), ‡∏ñ‡πâ‡∏≤‡πÑ‡∏°‡πà‡∏ï‡∏£‡∏á‡πÉ‡∏´‡πâ‡∏™‡∏µ‡∏î‡∏≥
            active_class = fn path -> 
            if current_path == path do
                "inline-flex items-center border-b-2 border-indigo-500 px-1 pt-1 text-sm font-medium text-gray-900" # Active Style
            else
                "inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700" # Inactive Style
            end
            end

            # ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Masters ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡∏´‡∏ô‡πâ‡∏≤‡∏¢‡πà‡∏≠‡∏¢ (‡πÄ‡∏ä‡πà‡∏ô /masters/1) ‡πÉ‡∏´‡πâ‡πÄ‡∏ä‡πá‡∏Ñ‡πÅ‡∏ö‡∏ö Prefix
            active_class_prefix = fn prefix ->
            if String.starts_with?(current_path, prefix) do
                "inline-flex items-center border-b-2 border-indigo-500 px-1 pt-1 text-sm font-medium text-gray-900"
            else
                "inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
            end
            end
        %>
        
        <div class="hidden sm:ml-8 sm:flex sm:space-x-8">
            <.link navigate={~p"/"} class={active_class.("/")}>
            Home
            </.link>

            <%= if assigns[:current_scope] && @current_scope.user do %>
            <.link navigate={~p"/dashboard"} class={active_class.("/dashboard")}>
                <%= if @current_scope.user.role == "master" do %>
                Dashboard Master
                <% else %>
                Dashboard
                <% end %>
            </.link>

            <.link navigate={~p"/masters"} class={active_class_prefix.("/masters")}>
                Masters
            </.link>
            <% end %>
        </div>
        </div>

        <div class="hidden sm:ml-6 sm:flex sm:items-center">
        <ul class="flex items-center gap-4">
            <%= if @current_scope do %>
            <li class="text-sm text-right">
                <div class="font-bold text-gray-900"><%= @current_scope.user.email %></div>
